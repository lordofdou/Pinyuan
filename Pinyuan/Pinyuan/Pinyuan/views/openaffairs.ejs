  <script charset="utf-8" src="/stylesheets/bootstrap/js/bootstrap.js"></script>
  
  <script>
   $(function(){
    $('span').click(function(){
      var first = $(this).parent().attr("lxxname");
      var second = $(this).html();
      var ttitle = first + " / " + second;
      location.href='/admin_event/details?id=' + $(this).attr("lxxid") + "&ttitle="+ttitle;
    });
   });
  </script>

</head>
<body>
  <nav class="navbar navbar-default ">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
