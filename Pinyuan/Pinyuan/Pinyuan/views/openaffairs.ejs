          <li style="margin-left: 0px">
            <a href="/admin_login/logout" style="color:#337AB7">注销</a>
          </li>

        </ul>
      </div>
    </div>
  </nav>

  <div class="content container">
    <a href="/admin_event/add?hide=0" class="btn btn-success" style="float:right;">撰写文章</a>
  </div>
   
  <div class="content">
  
    <% for (var i = 0;i < countries.length; i++) { %>
    <div class="content countryother">

      <div>
        <h2 class="page-header"> <%= countries[i].name %></h2>  
      </div>
      <% village = countries[i].subs %>
      <div class="sa" lxxname=<%= countries[i].name%>>
      <% for (var j = 0;j < village.length; j++) { %>
        <span lxxid="<%= village[j].id %>"><%= village[j].name %></span>

      <% } %>  
      </div>  

    </div>

    <% }%>
   

  </div>
  
