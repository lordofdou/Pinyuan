<!DOCTYPE html>
<html>
<head>
  <title>惠农政策</title>
  <script charset="utf-8" src="/javascripts/jquery-2.2.1.js"></script>
  <link rel='stylesheet' href='/stylesheets/bootstrap/css/bootstrap.css' />
  <link rel='stylesheet' href='/stylesheets/index.css' />
  <script charset="utf-8" src="/stylesheets/bootstrap/js/bootstrap.js"></script>
  <script type="text/javascript">
    $(document).ready(function(){
      
        $("#forword").click(function(){
            var curP = $("#curP").attr("curP");
            var pnum = $("#pnum").attr("pagesNum");
            var pre = curP-1;
            if(pre==0){
              pre = pre + pnum;
            }
            
            window.location.href="/admin_policy?page="+pre;
        })

        $("#back").click(function(){

            var curP = $("#curP").attr("curP");
            var pnum = $("#pnum").attr("pagesNum");
            var next = (parseInt(curP)+1)%(parseInt(pnum)+1);
           
            window.location.href="/admin_policy?page="+next;
        })

        $(".index_delete").click(function(){
          // window.location.href="/admin_policy/delete?id="+$(this).attr("id");
          alert($(this).attr("id"));
        }) 


    })
    
  </script>

</head>
<body>
  <nav class="navbar navbar-default ">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">平原村务公开</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse top-nav" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav nav_list">
          <li >
            <a href="index">
              用户管理
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li  >
            <a href="/admin_region">乡镇管理</a>
          </li>
          <li class="active">
            <a href="/admin_policy">惠农政策</a>
          </li>
          <li>
            <a href="/admin_project">惠农项目</a>
          </li>
          <li>
            <a href="/admin_event">村务公开</a>
          </li>

        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="#" style="padding-right: 0px">
              <%= username %>
            </a>
            
          </li>
          <li style="margin-left: 0px">
            <a href="/admin_login/logout" style="color:#337AB7">注销</a>
          </li>

        </ul>
      </div>
    </div>
  </nav>

  <div class="container content" >

    <form action="form-inline">

      <div class="input-group" style="width: 300px; float:right;">
        <input type="text" class="form-control" placeholder="搜索">
        <!--  <span class="input-group-btn control-label input-group-addon">
        <button class="btn btn-info " type="button">
          <span class="glyphicon glyphicon-search"></span>
        </button>
      </span>
      -->
      <span class="input-group-addon">
  <span class="glyphicon glyphicon-search"></span>
      </div>
     <a href="editarticle?hide=1"><button  type="button" class="btn btn-danger" style="float:right;margin-right:20px;">新增文章</button></a> 

    </form>

  </div>

  <div class="container">
    <table class="table table-hover content "   >
      
      <thead>
        <tr>
          <th>#</th>
          <th>标题</th>
          <th>发布时间</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      
      <%for (var i = 0;i< policies.length;i++) { %>
      <tbody>
        <tr>
          <td><%= i %></td>
          <td><%=  policies[i].title %></td>
          
          <td><%= new Date(parseInt(policies[i].uploadtime) * 1000).toLocaleString() %></td>
          <td>
             <span class="glyphicon glyphicon-edit " style="cursor:pointer"></span>
          </td>
          <td>
            <span id="<%= policies[i].id %>" class="glyphicon glyphicon-trash index_delete" style="cursor:pointer"></span>
          </td>
        </tr>
      </tbody>
      <% } %>
    
    </table>
  </div>

  

  <!-- 分页按钮 -->
  <div class="pagination_self">
    <nav>
      <ul id="pnum" class="pagination pagination-lg" pagesNum="<%= pagesNum%>">
        <li>
          <a id="forword" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        
        <% for (var j=0;j < pagesNum;j++) { %>
        
          <% if(j+1==currentPage){ %>
            <li id="curP" curP="<%= currentPage%>" class="active">
              <a href="/admin_policy?page=<%=j+1%>"> <%= j+1 %></a>
            </li>
          <% continue; %>  
          <% } %>

          <li>
              <a href="/admin_policy?page=<%=j+1%>"> <%= j+1 %> </a>
          </li>
          
        <% } %>
        
        
        


        <li>
          <a id="back" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>

  </div>
</body>

</html>